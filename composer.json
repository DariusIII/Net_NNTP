{
    "name": "dariusiii/net_nntp",
    "description": "Package for communication with NNTP/Usenet servers.",
    "homepage": "https://github.com/DariusIII/Net_NNTP",
    "license": "W3C",
    "type": "library",
    "authors": [
        {
            "email": "heino@gehlsen.dk",
            "name": "Heino H. Gehlsen",
            "role": "Lead"
        }
    ],
    "support": {
        "source": "https://github.com/DariusIII/Net_NNTP"
    },
    "autoload": {
        "psr-4": {
            "DariusIII\\NetNntp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DariusIII\\NetNntp\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.5",
        "psr/log": "^3.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "check": [
            "@analyse",
            "@test"
        ]
    }
}
