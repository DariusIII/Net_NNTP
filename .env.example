# Net_NNTP configuration
# Copy this file to .env and adjust the values.

# NNTP server connection
NNTP_HOST=news.php.net
NNTP_PORT=
NNTP_ENCRYPTION=
NNTP_TIMEOUT=

# Authentication (leave empty for anonymous access)
NNTP_USER=
NNTP_PASS=

# Demo defaults
NNTP_WILDMAT="php.pear*"
NNTP_USE_RANGE=false
NNTP_MAX_ARTICLES=10

# Logging: 0=emergency 1=alert 2=critical 3=error 4=warning 5=notice 6=info 7=debug
NNTP_LOG_LEVEL=5

# Demo: allow URL query-string to override connection settings
NNTP_ALLOW_OVERWRITE=true
NNTP_ALLOW_PORT_OVERWRITE=false

# Demo: input validation
NNTP_VALIDATE_INPUT=true

